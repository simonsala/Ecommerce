@model Ecommerce.Models.Product
@{
    ViewData["title"] = "Product form";
}

<div class="container">
    <h2 class="mt-3">Product Form</h2>
    <form class="mt-4" method="post"  asp-controller="Practice" asp-action="AddProduct">
        <p>
            <label for="productNameInput" class="form-label">Product Name</label>
            <input type="text" class="form-control" id="productNameInput" name="Name" value="@Model.Name" placeholder="Product Name">
        </p>
        <p>
            <label for="productPriceInput" class="form-label">Product Price</label>
            <input type="number" step="any" class="form-control" id="productPriceInput" name="Price" value="@Model.Price" placeholder="Product Price">
        </p>
        <p>
            <label for="productAvailableQuantityInput" class="form-label">Product Available Quantity</label>
            <input type="number" step="any" class="form-control" id="productAvailableQuantityInput" name="AvailableQuantity" value="@Model.AvailableQuantity" placeholder="Product Available Quantity">
        </p>
        <p>
            <label for="productWeightInput" class="form-label">Product Weight</label>
            <input type="number" step="any" class="form-control" id="productWeightInput" name="Weight" value="@Model.Weight" placeholder="Product Weight">
        </p>
        <p>
            <label for="productDescription" class="form-label">Product Description</label>
            <textarea style="width:100%" cols="50" rows="3" id="productDescription" name="Description"  value="@Model.Description" placeholder="Product Description"></textarea>
        </p>
        <p>
            <button type="submit" class="btn btn-primary">Add Product</button>
        </p>
    </form>
</div>